<div class="card padding margin-top">
  <%= form_with(model: @province, local: true) do |form| %>
    <div class="field">
      <%= form.label :name, "Nombre", style: "display: block" %>
      <%= form.text_field :name %>
    </div>
    <div class="padding">
      <div class="row">
        <%= form.submit @button_text, class:"btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>