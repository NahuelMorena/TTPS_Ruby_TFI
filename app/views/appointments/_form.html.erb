<div class="card padding margin-top">
  <%= form_with(model: @appointment, local: true) do |form| %>

    <div class="field">
      <%= form.label :date, "Fecha", style: "display: block" %>
      <%= form.date_field :date %>
    </div>

    <div class="field">
      <%= form.label :hour, "Hora", style: "display: block" %>
      <%= form.time_field :hour %>
    </div>

     <div class="field">
      <%= form.label :branch_office_id, "Sucursal"%>
      <%= form.collection_select :branch_office_id, BranchOffice.all, :id, :name, prompt: true%>   
    </div>

    <% if @edit %>
      <div class="field">
        <%= form.label :state_id, "Estado del turno" %>
        <% states = [['Pendiente', 1], ['Cancelado', 3]]%>
        <%= form.select :state_id, states%>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :reason, "RazÃ³n de solicitud", style: "display: block" %>
      <%= form.text_field :reason %>
    </div>

    <div class="padding">
      <div class="row">
        <%= form.submit @button_text, class:"btn btn-primary"%>
      </div>
    </div>
  <%end%>
</div>