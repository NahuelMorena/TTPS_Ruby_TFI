<div class="container">
    <div class="row">
        <h1><%=@appointment.user.name%></h1>
        <h1><%=@appointment.date.to_s%></h1>
        <h1><%=@appointment.hour.to_s%></h1>
        <h1><%=@appointment.reason%></h1>
        <h1><%=@appointment.state.name%></h1>
        <div class="row">
            <div class=col-4><%= link_to 'Editar Turno', edit_appointment_path(@appointment) %></div>     
        </div >
        <% if current_user == 2%>
            <div class="row">
                <%= link_to "Back to appointments", appointments_path %>
            </div>
        <% end %>
    </div>
</div>