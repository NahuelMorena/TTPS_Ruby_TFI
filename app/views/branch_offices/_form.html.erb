<div class="card padding margin-top">
  <%= form_with(model: @branch_office, local: true) do |form| %>

    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div class="field">
        <%= form.label :location_id %>
        <%= form.collection_select :location_id, Location.all, :id, :name, prompt: true%>
        <%= link_to "Agregar nueva localidad", new_location_url %>    
    </div>
    <div class="field">
        <%= form.label :direction %>
        <%= form.text_field :direction %>
    </div>
    <div class="field">
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    </div>
    <div class="field">
        <%= form.submit%>
    </div>
  <%end%>
</div>