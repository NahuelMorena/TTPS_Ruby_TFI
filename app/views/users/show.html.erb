<div class="container">
    <div class="row">
        <h1><%=@user.name%></h1>
        <h1><%=@user.surname%></h1>
        <h1><%=@user.email%></h1>
        <h1><%=@user.role.name%></h1>
        <div class=row>
            <% if @user != current_user%>
                <div class=col-2><%= button_to 'Eliminar Usuario', @user , method: :delete %></div>
            <% end %>
            <div class=col-4><%= link_to 'Editar Usuario', edit_user_path(@user) %></div>     
        </div >
    </div>
</div>